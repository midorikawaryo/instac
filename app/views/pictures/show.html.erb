<h3>投稿</h3>
<p>
  <%= image_tag @picture.image, :size => "400x250"%>
</p>
<p><%= @picture.content %></p>

<% unless @picture.user_id == current_user.id %>
  <% if @favorite.present? %>
    <p><%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %></p>
  <% else %>
    <p><%= link_to 'お気に入りする', favorites_path(picture_id: @picture.id), method: :post, class: 'btn btn-primary' %></p>
  <% end %>
<% end %>
<p><%= link_to '投稿一覧画面にもどる', pictures_path,class: 'btn btn-primary' %></p/>
